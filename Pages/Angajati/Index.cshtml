@page
@model Proiect_Final.Pages.Angajati.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Restaurant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Angajat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
