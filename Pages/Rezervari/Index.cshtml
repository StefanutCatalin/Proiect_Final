@page "/"
@model Proiect_Final.Pages.Rezervari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
 <div class="form-actions no-color">
 <p>
 Gasește după Numele Restaurantului / Numele clientului:
 <input type="text" name="SearchString" value="@Model.CurrentFilter"
/>
 <input type="submit" value="Search" class="btn btn-primary" /> |
 <a asp-page="./Index">Înapoi la lista completa</a>
 </p>
 </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NumeRestaurantSort">
                @Html.DisplayNameFor(model => model.Rezervare[0].NumeRestaurant)
             </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ClientSort">
                @Html.DisplayNameFor(model => model.Rezervare[0].Client.NumeIntreg)
            </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].NumarPersoane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].DataRezervare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Chelner.NumeChelner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].CategoriiMancare)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MancareD.Rezervari)
        {
            string selectedRow = "";
            if (item.ID == Model.RezervareID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

            <td>
                @Html.DisplayFor(modelItem => item.NumeRestaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NumeIntreg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarPersoane)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRezervare)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chelner.NumeChelner)
                </td>
                <td>
                    @{
                        foreach (var categorie in item.CategoriiMancare)
                        {
                            @categorie.Categorie.ID @: @categorie.Categorie.NumeCategorie <br />
                        }
                    }
                </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
